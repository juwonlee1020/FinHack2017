<script>
$("#chatbot-hide").click(function(){
  $("#chatbot").toggle();
  if($("#chatbot").is(":visible")){
        $("#hide").text("Hide the chatbot");
      }else{
        $("#hide").text("Chat with your attorney");
      }
  
})
</script>
